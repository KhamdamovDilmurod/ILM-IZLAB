<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/ripple_outline"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_outline"
        android:padding="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/nature"
                        android:scaleType="fitXY"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:backgroundTint="#B9575757"
                        android:padding="4dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="4dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/ic_baseline_location_on_24"
                                app:tint="@color/white" />

                            <TextView
                                android:id="@+id/district"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="fergana"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:padding="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:backgroundTint="#B9575757"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="4dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/ic_baseline_grade_24"
                                app:tint="#FFC107" />

                            <TextView
                                android:id="@+id/rating"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginHorizontal="8dp"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="12dp"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends school"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/sciences"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="2dp"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="200dp"
                android:layout_height="34dp"
                android:text="matematika, fizika, arivwggrtt"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                android:textSize="12sp"
                android:id="@+id/comment"
                android:maxLines="1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="matematika, fizika, ari"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</FrameLayout>